extends layout

block content
  //- h1.text-center AÃºn no tienes productos agregados.
    //- a(href="#") Se el primero en agregar
  //-   .panel.panel-primary(style="text-align: center")
  //-     .panel-heading
  //-     .panel-body
  //-       p #{products}
